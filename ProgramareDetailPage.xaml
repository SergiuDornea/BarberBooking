<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarberBooking.ProgramareDetailPage"
             Title="Detalii despre programare:">
    <StackLayout Margin="20">
        <Label Text="Descrierea serviciului dorit de client: " FontAttributes="Bold" />
        <Label Text="{Binding Descriere}" />

        <Label Text="Data programarii: " FontAttributes="Bold" />
        <Label Text="{Binding Data}" />

        <Button Text="Edit" Clicked="OnEditButtonClicked" />
        <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
    </StackLayout>
</ContentPage>