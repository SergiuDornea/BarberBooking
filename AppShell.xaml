<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BarberBooking.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BarberBooking"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="MainPage" />

        <ShellContent
   Title="Vezi programari"
   ContentTemplate="{DataTemplate local:ProgramareListPage}"/>

        <ShellContent
   Title="Log OUT"
   ContentTemplate="{DataTemplate local:LogoutPage}"/>


        <!-- Barber-specific tab -->
        <ShellContent
            Title="Barber-specific Tab"
            ContentTemplate="{DataTemplate local:ClientListPage}"
            IsVisible="{Binding IsBarber}"/>

    </TabBar>
</Shell>


