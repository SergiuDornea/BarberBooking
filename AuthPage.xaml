<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarberBooking.AuthPage"
             Title="AuthPage">
    <StackLayout Margin="20">
        <Label Text="Completeti urmatoarele date:" FontAttributes="Bold" />

        <Label Text="Email: " FontAttributes="Bold" />
        <Entry x:Name="emailEntry" Placeholder="Email" />

        <Label Text="Parola: " FontAttributes="Bold" />
        <Entry x:Name="passwordEntry" Placeholder="Parola" IsPassword="True" />

        <Label Text="Nume: " FontAttributes="Bold" />
        <Entry x:Name="numeEntry" Placeholder="Nume"  />

        <Label Text="Prenume: " FontAttributes="Bold" />
        <Entry x:Name="prenumeEntry" Placeholder="Prenume" />



        <Button Text="Sign Up" Clicked="OnSignUpButtonClicked" />
    </StackLayout>
</ContentPage>