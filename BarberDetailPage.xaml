<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarberBooking.BarberDetailPage"
             Title="Detalii barberi">
    <StackLayout Margin="20">
        <Label Text="Nume: " FontAttributes="Bold" />
        <Label Text="{Binding Nume}" />

        <Label Text="Prenume: " FontAttributes="Bold" />
        <Label Text="{Binding Prenume}" />

        <Label Text="Telefon: " FontAttributes="Bold" />
        <Label Text="{Binding Telefon}" />

        <Button Text="Edit" Clicked="OnEditButtonClicked" />
        <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
    </StackLayout>
</ContentPage>