<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarberBooking.BarberMainPage"
             Title="BarberMainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
     Source="app_logo.jpg"
     SemanticProperties.Description="app logo"
     HeightRequest="200"
     HorizontalOptions="Center" />

            <Label
     Text="Welcome BARBER"
     SemanticProperties.HeadingLevel="Level1"
     FontSize="32"
     HorizontalOptions="Center" />

            <Label
     Text="to the BarberShopBookigApp!"
     SemanticProperties.HeadingLevel="Level2"
     SemanticProperties.Description="Welcome to dot net Multi platform App U I"
     FontSize="18"
     HorizontalOptions="Center" />


            <!-- Butoane de nav la CRUD-->
            <Button
    Text="Clienti"
    Clicked="OnViewClientsClicked"
    HorizontalOptions="Center"
    Margin="0,10,0,0" />

            <Button
    Text="Barberi"
    Clicked="OnViewBarbersClicked"
    HorizontalOptions="Center"
    Margin="0,10,0,0" />

            <Button
Text="Programari"
Clicked="OnViewProgramariClicked"
HorizontalOptions="Center"
Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>